<%- model_class = Locality.new.class -%>
<div class="page-header">
  <h1>Lista de Localidades</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Opciones</th>
    </tr>
  </thead>
  <tbody>
    <% @localities.each do |locality| %>
      <tr>
        <td><%= locality.name %></td>
        <td>
          <%= link_to 'Editar', edit_admin_locality_path(locality) , {:remote => true , 'data-toggle' =>  "modal", 'data-target' => "#modal-window", 'data-keyboard' => true , 'data-backdrop' => true , :class => "btn btn-mini btn-primary"}  %>
          <%= link_to 'Eliminar', admin_locality_path(locality), :method => :delete,:confirm => 'Â¿Estas Seguro?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
