<%- model_class = Service.new.class -%>
  <div class="page-header">
    <h1>Lista de servicios</h1>
  </div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th>Opciones</th>
    </tr>
  </thead>
  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.nombre %></td>
        <td>
          <%= link_to 'Mostrar',
            admin_service_path(service), 
            { :remote => true, 
              'data-toggle' =>  "modal",
              'data-target' => "#modal-window", 
              'data-keyboard' => true,
              'data-backdrop' => true,
              :class => "btn btn-mini btn-success"
            }
          %>
          <%= link_to 'Editar',
            edit_admin_service_path(service),
            { :remote => true ,
              'data-toggle' =>  "modal",
              'data-target' => "#modal-window",
              'data-keyboard' => true ,
              'data-backdrop' => true ,
              :class => "btn btn-mini btn-primary"
            }
          %>
          <%= link_to 'Eliminar',
            admin_service_path(service),
            :method => :delete,
            :confirm => 'Â¿Estas Seguro?',
            :class => 'btn btn-mini btn-danger'
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>