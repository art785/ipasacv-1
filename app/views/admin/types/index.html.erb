<%- model_class = Type.new.class -%>
<div class="page-header">
  <h1>Tipos de Inmuebles</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th>Opciones</th>
    </tr>
  </thead>
  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td>
          <%= link_to raw('<i class="icon-pencil icon-white"></i>Editar'),
          edit_admin_type_path(type) ,
           {:remote => true , 
           	'data-toggle' =>  "modal", 
           	'data-target' => "#modal-window", 
           	'data-keyboard' => true , 
           	'data-backdrop' => true , 
           	:class => "btn btn-mini btn-primary"
           	}
           	%>
          <%= link_to raw('<i class="icon-trash icon-white"></i>Eliminar'),   
          admin_type_path(type), 
          :method => :delete,
          :confirm => 'Â¿Estas Seguro?', 
          :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

